// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native"]
  previewFeatures = ["connectOrCreate"]
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String     @default("b123")
  fname      String?
  lname      String?
  rule       Rule       @default(USER)
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  docs       Document[]
  Document   Document[] @relation("DocHandeling")
}

model Document {
  id          Int          @id @default(autoincrement())
  content     String
  doc_number  String       @unique
  doc_date    String
  doc_type    String
  folder_name String?
  filename    String?
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  tags        Tag[]        @relation(references: [id])
  file_url    String?
  type        DocType      @default(DEFAULT)
  has_date    Boolean?     @default(false)
  closed      Boolean?     @default(true)
  handler     User         @relation("DocHandeling")
  attachment  Attachment[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @default(now())
}

model Attachment {
  docId      Int?
  id         Int       @id @default(autoincrement())
  file_url   String?
  doc        Document? @relation(fields: [docId], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
}

model Tag {
  id    Int        @id @default(autoincrement())
  value String     @unique
  doc   Document[] @relation(references: [id])
}

model Logs {
  id         Int      @id @default(autoincrement())
  type       String
  message    String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

enum Rule {
  ROOT
  ADMIN
  USER
  VIEWER
}

enum DocType {
  HASEDATE
  DEFAULT
}
