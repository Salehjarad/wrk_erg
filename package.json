{
  "name": "archive-app",
  "version": "1.0.0",
  "description": "To store documents, with havy informations.",
  "main": "server.js",
  "author": "saleh jarad",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/server",
    "clean": "rm -rf dist && rm ./schema.graphql && rm -rf src/generated && echo \"\n cleaning done!\" ",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "before:generate": "npm run migrate:save --name production && npm run migrate:up",
    "generate:prisma": "prisma generate",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:down": "prisma migrate down 1 --experimental",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server"
  },
  "dependencies": {
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.162",
    "apollo-server-express": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "file-type": "^16.0.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "nexus-plugin-prisma": "^0.22.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.9.0",
    "@types/node": "^14.14.2",
    "@types/node-fetch": "^2.5.7",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  }
}
